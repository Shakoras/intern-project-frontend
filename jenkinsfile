pipeline {
    agent any
    parameters {
        choice(name: 'DEPLOYMENT_METHOD', choices: ['Docker Compose', 'Kubernetes'], description: 'Choose the deployment method.')
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'git@github.com:Shakoras/intern-project-frontend.git',
                    credentialsId: 'your-git-credentials-id',
                    branch: 'main'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'ng test --watch=false --browsers=ChromeHeadless'
            }
        }
        stage('Build Application') {
            steps {
                sh 'ng build --prod'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t your-dockerhub-username/your-frontend-repo:${GIT_COMMIT} .'
                }
            }
        }
        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds',
                                                  usernameVariable: 'DOCKER_USER',
                                                  passwordVariable: 'DOCKER_PASS')]) {
                    echo 'Pushing Image to DockerHub...'
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push your-dockerhub-username/your-frontend-repo:${GIT_COMMIT}
                    '''
                }
            }
        }
        stage('Deployment') {
            steps {
                script {
                    if (params.DEPLOYMENT_METHOD == 'Docker Compose') {
                        echo 'Deploying Frontend locally with Docker Compose...'
                        sh 'docker-compose -f docker-compose-frontend.yml up -d'
                    } else if (params.DEPLOYMENT_METHOD == 'Kubernetes') {
                        echo 'Deploying Frontend to Kubernetes...'
                        sh '''
                            kubectl apply -f k8s/deployment-frontend.yaml
                            kubectl apply -f k8s/service-frontend.yaml
                        '''
                    }
                }
            }
        }
    }
}
